<div class="container">
  <div class="row">

    <div class="col-md-6">
      <%= image_tag @listing.image.url(:original), class: "img-responsive" %>
    </div>

    <div class="col-md-6">
      <h3><%= @listing.name %> <i> listed by <%= @listing.user.first_name %></i></h3>
      <p class="justify"> <strong>Description:</strong> <%= @listing.description %></p>
      <p class="text"><strong>Price:</strong> RM<%= @listing.price.to_f / 100 %> per night</p>

        <% if current_user %>

            <% if current_user.id != @listing.user.id %>
              
              <% if @reservation.nil? %>
                <p> Error @reservations = nil! </p>
              <% else %>
                <%= render partial: 'date', :locals => {reservation: @reservation} %>
              <% end %>

            <% else %>
              <%= button_to "edit", edit_listing_path(@listing) %>
            <% end %>
          

        <% else %>
          <p>Please login first to check availability</p>
          
        <% end %>
    </div>
  </div>
</div>

