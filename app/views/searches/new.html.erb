<h1>Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>

  <div class="field">
    <%= s.label :keywords %><br />
    <%= s.text_field :keywords %>
  </div>
  
  <div class="field">
   <%= s.label :category %><br />
   <%= s.select :category, options_for_select(@categories), :include_blank => true%>
  </div>
  
  <div class="field">
    <p><%= s.label :min_price, "Min Price" %> - <%= s.text_field :min_price, size: 10 %></p>
    <p><%= s.label :min_price, "Max Price" %> - <%= s.text_field :max_price, size: 10 %></p>
  </div>

   <div class="field">
    <p><%= s.label :guest, "Guests" %> - <%= s.text_field :guest, size: 10 %></p>
  </div>

  <div class="checkbox">
    <p><%= s.check_box :smoking, "Smoking Allowed" %> - <%= s.check_box :smoking %></p>
  </div>

  <div class="checkbox">
    <p><%= s.check_box :pets, "Pets Allowed" %> - <%= s.check_box :pets %></p>
  </div>

  <div class="actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>

<% end %>

<p><%= link_to 'Back', listings_path %></p>
